@model AccountRegisterViewModel

<div class="container text-center register-container">
    <style>
        .register-container {
            width: 300px;
            margin: 50px auto;
            padding: 20px;
            border: 2px solid black;
            border-radius: 10px;
        }
        .register-container label {
            display: block;
            margin-bottom: 8px;
        }
        .register-container input[type="text"],
        .register-container input[type="password"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid black;
            border-radius: 10px;
        }
        .register-container .text-danger {
            margin-bottom: 15px;
        }
    </style>

    <div asp-validation-summary="All" class="text-danger error-all visually-hidden"></div>
    <form asp-action="Register">
        <div>
            <h2>REGISTER</h2>
        </div>
        <div>
            <label asp-for="Username"></label>
            <input type="text" class="username" asp-for="Username">
            <span asp-validation-for="Username" class="text-danger visually-hidden"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input type="text" class="email" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger visually-hidden"></span>
        </div>
        <div>
            <label asp-for="Password"></label>
            <input type="password" class="password" asp-for="Password">
            <span asp-validation-for="Password" class="text-danger visually-hidden"></span>
        </div>
        <div>
            <label asp-for="PasswordConfirm"></label>
            <input type="password" class="confirm-password" asp-for="PasswordConfirm">
            <span asp-validation-for="PasswordConfirm" class="text-danger visually-hidden"></span>
        </div>
        <button type="submit" class="submit-btn btn btn-primary btn-lg">Register</button>
        <div>
            Already registered?
            <a asp-controller="Account" asp-action="Login">Sign in</a>
        </div>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const usernameInput = document.querySelector('.username');
        const emailInput = document.querySelector('.email');
        const passwordInput = document.querySelector('.password');
        const confirmPasswordInput = document.querySelector('.confirm-password');
        const submitButton = document.querySelector('.submit-btn');

        let inputs = [usernameInput, emailInput, passwordInput, confirmPasswordInput];
        const inputStatus = {};

        inputs.forEach((input) => {
            if (input.value.trim() === '') {
                inputStatus[input.className] = false;
            }
            else {
                inputStatus[input.className] = true;
            }
        });
        inputStatus['passwordEqual'] = false;

        submitButton.disabled = true;

        function validateInput(event) {
            let input = event.target;

            if (input.value.trim() === '') {
                input.classList.add('border');
                input.classList.add('border-3');
                input.classList.add('border-danger');
                inputStatus[input.className] = false;
            } else {
                input.classList.remove('border');
                input.classList.remove('border-3');
                input.classList.remove('border-danger');
                inputStatus[input.className] = true;
            }

            const allInputsValid = Object.values(inputStatus).every((status) => status === true);
            submitButton.disabled = !allInputsValid;
        }

        function IsPasswordEqual() {
            if (passwordInput.value !== confirmPasswordInput.value) {
                passwordInput.classList.add('border');
                passwordInput.classList.add('border-3');
                passwordInput.classList.add('border-danger');
                confirmPasswordInput.classList.add('border');
                confirmPasswordInput.classList.add('border-3');
                confirmPasswordInput.classList.add('border-danger');
                inputStatus['passwordEqual'] = false;
            } else {
                passwordInput.classList.remove('border');
                passwordInput.classList.remove('border-3');
                passwordInput.classList.remove('border-danger');
                confirmPasswordInput.classList.remove('border');
                confirmPasswordInput.classList.remove('border-3');
                confirmPasswordInput.classList.remove('border-danger');
                inputStatus['passwordEqual'] = true;
            }

            const allInputsValid = Object.values(inputStatus).every((status) => status === true);
            submitButton.disabled = !allInputsValid;
        } 

        inputs.forEach((input) => {
            input.addEventListener('input', validateInput);
        });
        passwordInput.addEventListener('input', IsPasswordEqual);
        confirmPasswordInput.addEventListener('input', IsPasswordEqual);
        
        // Display TempData message as a toast notification if it's available
        @if (TempData["message"] != null)
        {
            <text>
                Toastify({
                    text: '@TempData["message"]',
                    duration: 3000,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "red",
                    stopOnFocus: true
                }).showToast();
            </text>
        }

        // Check for validation errors and display them as toast notifications
        const validationErrors = document.querySelectorAll('.error-all');
        validationErrors.forEach((error) => {
            if (error.textContent.trim() !== '') {
                Toastify({
                    text: error.textContent,
                    duration: 3000,
                    gravity: "top",
                    position: "center",
                    backgroundColor: "red",
                    stopOnFocus: true
                }).showToast();

                /*
                let splitError = error.textContent.split(" ");
                console.log(splitError);
                for (let i = 1; i < splitError.length; i += 4) {
                    console.log(splitError[i]);
                    let inputField = document.querySelector('.' + splitError[i].toLowerCase());
                    if (inputField != null) {
                        inputField.classList.add('border');
                        inputField.classList.add('border-danger');
                    }
                }
                */
            }
        });
    });
</script>
