@model IEnumerable<UserEntity>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2>
                User list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Admin" asp-action="Create">
                <i class="bi bi-plus-square"></i> Add new User
            </a>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th class="col">Name</th>
            <th class="col">Username</th>
            <th class="col">Role</th>
            <th class="col-2"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Username</td>
                <td>@user.Role.ToString()</td>
                <td>
                    <a asp-route-id="@user.Id" class="btn btn-primary mx-2"
                       asp-controller="Admin" asp-action="Edit">
                        <i class="bi bi-plus-square"></i> Edit
                    </a>
                    <a asp-route-id="@user.Id" class="btn btn-danger" 
                       asp-controller="Admin" asp-action="Delete">
                        <i class="bi bi-trash3"></i> Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>