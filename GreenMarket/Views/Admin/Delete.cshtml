@model UserEntity

<div class="container">
    <div class="row">
        <h2 class="text-danger">Delete User</h2>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Id" /> 
        <div class="row gy-2">
            <div class="form-floating">
                <input asp-for="Name" type="text" id="name" 
                       class="form-control" placeholder="Name" disabled>
                <label for="name" class="form-label">Name</label>
                <span asp-validation-for="Name" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Username" type="text" id="username" 
                       class="form-control" placeholder="Username" disabled>
                <label for="username" class="form-label">Username</label>
                <span asp-validation-for="Username" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="text" id="pwd" 
                       class="form-control" placeholder="Password" disabled>
                <label for="pwd" class="form-label">Password</label>
                <span asp-validation-for="Password" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Role" type="text" id="role" 
                       class="form-control" placeholder="Role" disabled>
                <label for="role" class="form-label">Role</label>
                <span asp-validation-for="Role" class="text-danger field-validation-error"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div>
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </form>
</div>