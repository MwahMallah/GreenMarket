@model EditProductViewModel

<div class="container">
    <div class="row">
        <h2 class="text-primary">Edit Product</h2>
    </div>
    <form method="post">
        <div class="row gy-2">
            <div class="form-floating">
                <input asp-for="Product.Name" type="text" id="name" 
                       class="form-control" placeholder="Name">
                <label for="name" class="form-label">Name</label>
                <span asp-validation-for="Product.Name" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Product.ImgUrl" type="text" id="img" 
                       class="form-control" placeholder="Image">
                <label for="img" class="form-label">Image</label>
                <span asp-validation-for="Product.ImgUrl" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Product.Stock" type="text" id="stock" 
                       class="form-control" placeholder="Stock">
                <label for="stock" class="form-label">Stock</label>
                <span asp-validation-for="Product.Stock" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Product.Description" 
                    class="form-control" rows="5">Description</textarea>
                <span asp-validation-for="Product.Description" class="text-danger field-validation-error"></span>
            </div>
            <div class="attributes">
                @foreach (var (attr, index) in Model.Attributes.Select((value, i) => (value, i)))
                {
                    <div class="col-md-6 mb-3">
                        <strong>@attr.Name</strong>
                        <input name="Attributes[@index].Value" value="@attr.Value" class="form-control" />
                    </div>
                }
            </div>
            
            <input asp-for="Product.CategoryId" type="hidden" />
            <input asp-for="Product.CreatorId" type="hidden" />
        </div>
        <div class="row mt-2">
            <div>
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </form>
</div>