@model ProductEntity

<div class="container">
    <div class="row">
        <h2 class="text-primary">Delete Product</h2>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Id" /> 
        <div class="row gy-2">
            <div class="form-floating">
                <input asp-for="Name" type="text" id="name"
                       class="form-control" placeholder="Name" disabled>
                <label for="name" class="form-label">Name</label>
                <span asp-validation-for="Name" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ImgUrl" type="text" id="img"
                       class="form-control" placeholder="Image" disabled>
                <label for="img" class="form-label">Image</label>
                <span asp-validation-for="ImgUrl" class="text-danger field-validation-error"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Stock" type="text" id="stock" 
                       class="form-control" placeholder="Stock" disabled>
                <label for="stock" class="form-label">Stock</label>
                <span asp-validation-for="Stock" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="Description" 
                    class="form-control" rows="5" disabled>Description</textarea>
                <span asp-validation-for="Description" class="text-danger field-validation-error"></span>
            </div>
            <input asp-for="CategoryId" type="hidden"/>
            <input asp-for="CreatorId" type="hidden"/>
        </div>
        <div class="row mt-2">
            <div>
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </form>
</div>