@model UserEntity

<div class="container">
    <div class="row">
        <h2 class="text-success">Edit</h2>
    </div>
    <form method="post" asp-route-id="@Model.Id">
        <div class="row gy-2">
            <div class="form-floating">
                <input asp-for="Name" type="text" id="name" 
                       class="form-control" placeholder="Name">
                <label for="name" class="form-label">Name</label>
                <span asp-validation-for="Name" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ImgUrl" type="text" id="img" 
                       class="form-control" placeholder="Name">
                <label for="img" class="form-label">Img url</label>
                <span asp-validation-for="Name" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Username" type="text" id="username" 
                       class="form-control" placeholder="Username">
                <label for="username" class="form-label">Username</label>
                <span asp-validation-for="Username" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="text" id="pwd" 
                       class="form-control" placeholder="Password">
                <label for="pwd" class="form-label">Password</label>
                <span asp-validation-for="Password" class="text-danger field-validation-error"></span>
            </div>
            <input asp-for="Role" type="hidden" />
        </div>
        <div class="row mt-2">
            <div>
                <button type="submit" class="btn btn-success">Edit</button>
                <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-dark">Back to profile</a>
            </div>
        </div>
    </form>
</div>