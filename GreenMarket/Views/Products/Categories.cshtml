@model IEnumerable<CategoryEntity>


<div class="d-flex flex-wrap">
    @foreach (var category in Model)
    {
        <div class="col-12 col-md-4 col-lg-4 p-2"> 
            <div class="position-relative text-center">
                <img src="@category.ImgUrl" alt="Category image" class="img-fluid rounded" 
                     style="width: auto; height: 200px;">
                
                <a asp-action="Categories" asp-route-id="@category.Id" 
                   class="position-absolute top-50 start-50 translate-middle text-white text-decoration-none fw-bold"
                   style="background-color: rgba(0, 0, 0, 0.5); padding: 5px 10px; border-radius: 5px;">
                    @category.Name
                </a>
            </div>
        </div>
    }
</div>
