@model CategoryEntity

<div class="container">
    <div class="row">
        <h2 class="text-primary">Delete Category</h2>
    </div>
    <form method="post">
        <div class="row gy-2">
            <div class="form-floating">
                <input asp-for="Name" type="text" id="name" 
                       class="form-control" placeholder="Name" disabled>
                <label for="name" class="form-label">Name</label>
                <span asp-validation-for="Name" class="text-danger field-validation-error"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ImgUrl" type="text" id="img" 
                       class="form-control" placeholder="Image" disabled>
                <label for="img" class="form-label">Image</label>
                <span asp-validation-for="ImgUrl" class="text-danger field-validation-error"></span>
            </div>
            <input asp-for="ParentId" type="hidden" />
            <input asp-for="Status" type="hidden" />
        </div>
        <div class="row mt-2">
            <div>
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Added" class="btn btn-dark">Back to List</a>
            </div>
        </div>
    </form>
</div>